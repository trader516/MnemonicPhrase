{
  "name": "mnemonic-encryptor",
  "version": "1.0.0",
  "description": "助记词生成与加密工具 - 支持BIP39标准和AES-256-CTR加密",
  "main": "public/electron.js",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.3",
    "@mui/material": "^5.14.5",
    "bip39": "^3.1.0",
    "electron-is-dev": "^2.0.0",
    "ethers": "^6.15.0",
    "file-saver": "^2.0.5",
    "jszip": "^3.10.1",
    "qrcode": "^1.5.4",
    "qrcode-reader": "^1.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "rpc-proxy": "node scripts/rpc-proxy.js",
    "tx-server": "node scripts/tx-server.js",
    "electron-pack": "npm run build && electron-builder",
    "preelectron-pack": "npm run build"
  },
  "devDependencies": {
    "buffer": "^6.0.3",
    "concurrently": "^8.2.0",
    "crypto-browserify": "^3.12.1",
    "electron": "^25.0.0",
    "electron-builder": "^24.6.3",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "react-app-rewired": "^2.2.1",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "vm-browserify": "^1.1.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.mnemonic.encryptor",
    "productName": "助记词加密工具",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "public/electron.js"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
